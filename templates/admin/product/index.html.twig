{% extends 'admin/admin_base.html.twig' %}

{% block title %}Products overview
{% endblock %}

{% block body %}
	<div class="container">
		<div class="table-responsive">
			<div class="table-wrapper">
				<div class="table-title">
					<div class="row">
						<div class="col-sm-5">
							<h2>Products
								<b>Management</b>
							</h2>
						</div>
						<div class="col-sm-7">
							<a href="{{ path('app_admin_product_new') }}" class="btn btn-secondary">
								<i class="material-icons">&#xE147;</i>
								<span>Add New Product</span>
							</a>
						</div>
					</div>
				</div>
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>#</th>
							<th width="15%">Name</th>
							<th width="15%">Description</th>
							<th>Category</th>
							<th>SKU</th>
							<th>Price</th>
							<th>Stock</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						{% if products is not empty %}
							{% for product in products %}
								<tr>
									<td>{{ product.id }}</td>
									<td>
										<a href="{{ path('app_admin_product_edit', {'id': product.id}) }}"><img src="{{ product.image }}" width='20%' lass="avatar" alt="Product image">
											{{ product.name }}</a>
									</td>
									<td>
										{% if product.description|length < 40 %}
											{{ product.description }}
										{% else %}
											<small>
												<a href="{{ path('app_admin_product_edit', {'id': product.id}) }}">
													Click to read... (too long to display)
												</a>
											</small>
										{% endif %}
									</td>
									<td>
										{{ product.category ? product.category.name : 'None' }}</td>
									<td>{{ product.sku }}</td>
									<td>{{ product.price }}
										â‚¬</td>
									<td>
										<span class="status text-success">&bull;</span>
									</td>
									<td>
										<a href="{{ path('app_admin_product_edit', {'id': product.id}) }}">
											<i class="material-icons">&#xE8B8;</i>
										</a>
									</td>
								</tr>
							{% endfor %}
						{% else %}
							<tr>
								<td colspan="7">
									<b>No product found</b>
									(maybe check the database?)
								</td>
							</tr>
						{% endif %}
					</tbody>
				</table>
				<div class="clearfix">
					<div class="hint-text">Showing
						<b>{{ products|length }}</b>
						out of
						<b>{{ products|length }}</b>
						entries</div>
					<ul class="pagination">
						<li class="page-item disabled">
							<a href="#">Previous</a>
						</li>
						<li class="page-item active">
							<a href="#" class="page-link">1</a>
						</li>
						<li class="page-item">
							<a href="#" class="page-link">2</a>
						</li>
						<li class="page-item">
							<a href="#" class="page-link">3</a>
						</li>
						<li class="page-item">
							<a href="#" class="page-link">Next</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
