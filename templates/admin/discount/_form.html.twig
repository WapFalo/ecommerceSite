<div class="container-fluid px-1 py-5 mx-auto">
	<div class="row d-flex justify-content-center">
		<div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
			<h3>Coupon</h3>
			<p>
				{% if discount.id %}Edit{% else %}Create
				{% endif %}
				your coupon here.</p>

			{{ form_start(form) }}

			<p>{{ form_errors(form) }}</p>
			<div class="card">
				<div class="card">
					<div class="card-body">
						<div class="row justify-content-between text-left">
							<div class="col-sm-6 flex-column d-flex">
								{{ form_row(form.name) }}
							</div>
						</div>
						<div class="row justify-content-between text-left">
							<div class="col-sm-3 flex-column d-flex">
								{{ form_row(form.amount) }}
							</div>
							<div class="col-sm-3 flex-column d-flex">
								{{ form_row(form.price) }}
							</div>
						</div>
					</div>
				</div>
			</div>

			<div class="row justify-content-center mt-3">
				<div class="col-sm-4">
					<a href="{{ path('app_admin_discount_index') }}">
						<button type="button" class="btn-block btn-secondary">Go back</button>
					</a>
				</div>
				<div class="col-sm-4">
					<button type="submit" class="btn-block btn-primary">Save</button>
				</div>
				{{ form_end(form) }}
				{% if discount.id %}
					<div class="col-sm-4">
						<form method="post" action="{{ path('app_admin_discount_delete', {'id': discount.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item? (this action can't be undone)');">
							<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ discount.id) }}">
							<button class="btn-block btn-danger">Delete?!</button>
						</form>
					</div>
				{% endif %}
			</div>
		</div>
	</div>
</div></div>
